<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">


            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Title: "
                android:id="@+id/textView"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="27dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="title helo word acer asdfasdfasdfasdfasdfasdfasdfasdflike fuck you"
                android:width="300dp"
                android:height="50dp"
                android:id="@+id/titleLayout"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:layout_below="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date:"
                android:id="@+id/lebalDate"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2010/02/22"
                android:id="@+id/date"
                android:layout_marginLeft="2dp"
                android:textSize="20dp"
                android:layout_alignTop="@+id/lebalDate"
                android:layout_alignStart="@+id/titleLayout" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <!-- A CardView that contains a TextView -->


    </LinearLayout>

</LinearLayout>
